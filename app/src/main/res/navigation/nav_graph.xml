<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ibrhm.cryptoexchange.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_tradeFragment2"
            app:destination="@id/tradeFragment" />
    </fragment>
    <fragment
        android:id="@+id/marketFragment"
        android:name="com.ibrhm.cryptoexchange.view.MarketFragment"
        android:label="fragment_market"
        tools:layout="@layout/fragment_market" >
        <action
            android:id="@+id/action_marketFragment_to_tradeFragment"
            app:destination="@id/tradeFragment" />
    </fragment>
    <fragment
        android:id="@+id/tradeFragment"
        android:name="com.ibrhm.cryptoexchange.view.TradeFragment"
        android:label="fragment_trade"
        tools:layout="@layout/fragment_trade" />
    <fragment
        android:id="@+id/walletFragment"
        android:name="com.ibrhm.cryptoexchange.view.WalletFragment"
        android:label="fragment_wallet"
        tools:layout="@layout/fragment_wallet" />
    <fragment
        android:id="@+id/userFragment"
        android:name="com.ibrhm.cryptoexchange.view.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" />
</navigation>